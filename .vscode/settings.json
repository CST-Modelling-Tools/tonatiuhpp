{
  // Where the top-level CMakeLists.txt is located
  "cmake.sourceDirectory": "${workspaceFolder}/source",

  // Use the CMakePresets.json file for configure/build
  "cmake.useCMakePresets": true,

  // Automatically run "cmake --preset <auto-chosen>" when opening the folder
  "cmake.configureOnOpen": true,

  // Optional: default per-user install prefix (used by your CMakeLists.txt if not overridden)
  // This keeps installs user-local and works on any machine.
  "cmake.configureEnvironment": {
    "TonatiuhXXInstallDir": "${env:HOME}/TonatiuhXX"
  }
}